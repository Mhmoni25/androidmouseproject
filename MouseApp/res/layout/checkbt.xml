<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tvCurrentStatus"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/currentstatus" />

    <TextView
        android:id="@+id/tvCalibrateDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bSaveContinue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/pbCalibrate"
        android:maxLines="500"
        android:scrollbars="vertical"
        android:text="@string/calibrateText" />

    <Button
        android:id="@+id/bSaveContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="@string/savecontinue" />

    <Button
        android:id="@+id/bDisconnect"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bCalibrate"
        android:layout_alignParentLeft="true"
        android:text="@string/disconnect" />

    <Button
        android:id="@+id/bConnect"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bDisconnect"
        android:layout_alignParentLeft="true"
        android:text="@string/connect" />

    <Button
        android:id="@+id/bCalibrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/calibrate" />

    <ProgressBar
        android:id="@+id/pbCalibrate"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/bCalibrate" />

</RelativeLayout>