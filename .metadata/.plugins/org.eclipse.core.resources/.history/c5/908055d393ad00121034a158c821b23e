package itt.t00154755.mouseserver;

/**
 * 
 * @author Christopher Donovan - T00154755
 * 
 * Class used to run the server listener.
 * This class simply create an reference to the AppServerListener, 
 * and a thread to run the Class on.
 */
public class RunServerListener
{
	/**
	 * 
	 */
	public void startServer()
	{
		// create a class reference
		AppServerListener appServerListener = new AppServerListener();
		// create a new thread that calls the runnable object.
		Thread runningServer = new Thread(appServerListener);
		// start the Thread
		runningServer.start();
	}

}// end of main method
