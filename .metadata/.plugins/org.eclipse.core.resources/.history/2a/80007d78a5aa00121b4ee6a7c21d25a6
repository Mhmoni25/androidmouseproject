package itt.t00154755.mouseserver;

import java.awt.Dimension;
import java.awt.Toolkit;
import java.awt.Window;

public class RobotUtils
{

	public final Dimension SCREENSIZE = Toolkit.getDefaultToolkit().getScreenSize();;
	public final double width = getWidth();
	public final double height = getHeight();
	public final int ctrWidth = 0;
	public final int ctrHeight = 0;


	public void init()
	{
		
	}


	/**
	 * @return the width
	 */
	public double getWidth()
	{
		return SCREENSIZE.width;
	}


	/**
	 * @return the height
	 */
	public double getHeight()
	{
		return SCREENSIZE.height;
	}


	/**
	 * @return the ctrWidth
	 */
	public int getCtrWidth()
	{
		return SCREENSIZE.width / 2;
	}


	/**
	 * @return the ctrHeight
	 */
	public int getCtrHeight()
	{
		return SCREENSIZE.height / 2;
	}

}
