package itt.t00154755.mouseapp;

import android.view.View;

public class AppClient {
	private View.OnClickListener mConnect = new View.OnClickListener( {
        @Override
        public void onClick(View v) {
                try {
                        Log.d(TAG, "getting local device");
                          // remote MAC here:
                        BluetoothDevice device = mBtAdapter.getRemoteDevice("00:15:83:3D:0A:57");
                        Log.d(TAG, "connecting to service");
                        BluetoothSocket socket =
                            device.createInsecureRfcommSocketToServiceRecord(
                            UUID.fromString("00000000-0000-0000-0000-00000000ABCD"));
                        Log.d(TAG, "about to connect");
                        socket.connect();
                        Log.d(TAG, "Connected!");
                        socket.getOutputStream().write("Hello, world!".getBytes());
                } catch (Exception e) {
                        Log.e(TAG, "Error connecting to device", e);
                }
        }
});
}
