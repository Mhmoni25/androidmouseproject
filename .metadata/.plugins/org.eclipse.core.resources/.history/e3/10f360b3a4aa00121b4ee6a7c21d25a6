package itt.t00154755.mouseserver;

import java.awt.Dimension;
import java.awt.Toolkit;


public class RobotUtils
{
	public Dimension SCREENSIZE;
	private double width;
	private double height;
	private int ctrWidth = 0;
	private int ctrHeight = 0;
	
	public void init()
	{
		SCREENSIZE = Toolkit.getDefaultToolkit().getScreenSize();
		
	}

	/**
	 * @return the width
	 */
	public double getWidth()
	{
		return width;
	}

	/**
	 * @param width the width to set
	 */
	public void setWidth( double width )
	{
		this.width = SCREENSIZE.width;
	}

	/**
	 * @return the height
	 */
	public double getHeight()
	{
		return height;
	}

	/**
	 * @param height the height to set
	 */
	public void setHeight( double height )
	{
		this.height = height;
	}

	/**
	 * @return the ctrWidth
	 */
	public int getCtrWidth()
	{
		return ctrWidth;
	}

	/**
	 * @param ctrWidth the ctrWidth to set
	 */
	public void setCtrWidth( int ctrWidth )
	{
		this.ctrWidth = ctrWidth;
	}

	/**
	 * @return the ctrHeight
	 */
	public int getCtrHeight()
	{
		return ctrHeight;
	}

	/**
	 * @param ctrHeight the ctrHeight to set
	 */
	public void setCtrHeight( int ctrHeight )
	{
		this.ctrHeight = ctrHeight;
	}

}
