package itt.t00154755.mouseserver;

public class AccelerometerObject implements Serializable{

	private static final long serialVersionUID = 1L;
	
	private float x;
	private float y;
	private float[] accData;
	/**
	 * 
	 */
	public AccelerometerObject() {
		// 
		
	}

	public AccelerometerObject(float[] values) {
		setAccData(accData);
	}
	public float getX() {
		return x;
	}
	public void setX(float x) {
		
		this.x = x;
	}
	public float getY() {
		return y;
	}
	public void setY(float y) {
		this.y = y;
	}
	
	/**
	 * @return the accData
	 */
	public float[] getAccData() {
		return accData;
	}
	/**
	 * @param accData the accData to set
	 */
	public void setAccData(float[] accData) {
		this.accData = accData;
	}
	@Override
	public String toString() {
		String output = "X-Axis: " +getX() + "\nY-Axis: " + getY() + "\n";
		return output;
	}
}
