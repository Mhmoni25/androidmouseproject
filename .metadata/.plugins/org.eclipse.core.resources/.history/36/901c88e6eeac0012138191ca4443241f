package itt.t00154755.mouseserver;

import java.awt.EventQueue;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.BoxLayout;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JTextArea;

public class ServerView
{

	private JFrame frame;
	private RunServerListener runServerListener = new RunServerListener();


	/**
	 * Launch the application.
	 */
	public static void main( String[] args )
	{
		EventQueue.invokeLater(new Runnable()
		{

			public void run()
			{
				try
				{
					ServerView window = new ServerView();
					window.frame.setVisible(true);
				}
				catch ( Exception e )
				{
					e.printStackTrace();
				}
			}
		});
	}


	/**
	 * Create the application.
	 */
	public ServerView()
	{
		initialize();
	}


	/**
	 * Initialize the contents of the frame.
	 */
	private void initialize()
	{
		frame = new JFrame();
		frame.setBounds(100, 100, 450, 300);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.getContentPane().setLayout(new BoxLayout(frame.getContentPane(),
													   BoxLayout.X_AXIS));
		final JTextArea txtrServertext = new JTextArea();
		txtrServertext.setText("serverText");
		frame.getContentPane().add(txtrServertext);
		final JButton btnStartServer = new JButton("Start Server");
		btnStartServer.addActionListener(new ActionListener()
		{

			public void actionPerformed( ActionEvent e )
			{

					runServerListener.startServer();

						txtrServertext.append("server is running");
			}
		});
		frame.getContentPane().add(btnStartServer);
		final JButton btnStopServer = new JButton("Stop Server");

		btnStopServer.addActionListener(new ActionListener()
		{

			public void actionPerformed( ActionEvent e )
			{

					runServerListener.stopServer();
					
						txtrServertext.append("server stopped");
			}
		});
		frame.getContentPane().add(btnStopServer);

	}

}
