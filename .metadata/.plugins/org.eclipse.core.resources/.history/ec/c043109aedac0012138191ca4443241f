package itt.t00154755.mouseserver;

import java.awt.EventQueue;
import java.awt.FlowLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;
import java.awt.GridLayout;
import javax.swing.BoxLayout;
import javax.swing.JTextArea;


public class ServerView
{

	private JFrame frame;
	private RunServerListener runServerListener;


	/**
	 * Launch the application.
	 */
	public static void main( String[] args )
	{
		EventQueue.invokeLater(new Runnable()
		{

			public void run()
			{
				try
				{
					ServerView window = new ServerView();
					window.frame.setVisible(true);
				}
				catch ( Exception e )
				{
					e.printStackTrace();
				}
			}
		});
	}


	/**
	 * Create the application.
	 */
	public ServerView()
	{
		initialize();
	}


	/**
	 * Initialize the contents of the frame.
	 */
	private void initialize()
	{
		frame = new JFrame();
		frame.setBounds(100, 100, 450, 300);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.getContentPane().setLayout(new BoxLayout(frame.getContentPane(), BoxLayout.X_AXIS));
		JTextArea txtrServertext = new JTextArea();
		txtrServertext.setText("serverText");
		frame.getContentPane().add(txtrServertext);
		final JButton btnStartServer = new JButton("Start Server");
		frame.getContentPane().add(btnStartServer);
		final JButton btnStopServer = new JButton("Stop Server");
		final boolean isRunning = true;
		btnStopServer.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				if (e.getSource() == btnStartServer)
				{
					runServerListener.startServer();
					
					
					while(isRunning)
					{
						txtrServertext.setText("server is running");
					}
				}
				else if (e.getSource() == btnStopServer)
				{
					runServerListener.stopServer();
				}
			}
		});
		frame.getContentPane().add(btnStopServer);
		
		
	}

}
